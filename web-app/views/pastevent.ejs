<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View All Persons</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <style>
      .btn-custom{
        background-color: #B53135;
        color: white;
      }
      .btn-custom:hover{
        background-color: #6E1E21;
        color: white;
      }
      body{
        background-color: #FFEEBE;
      }
    </style>

  </head>
  <body>

    <div class="container">
      <div class="row h-200">
        <div class="col-lg-4"><!-- this is just here to center the next column --></div>
        <div class="col-lg-12 text-center my-auto">
            <% if (pastEvents && pastEvents.length > 0) { %>
              <p>
              <b>Here are all the past events in the database:</b>
              </p>
              <p>
              <table class="table table-bordered">
                <thread>
                  <th>Title</th>
                  <th>Date</th>
                  <th>End Time</th>
                  <th colspan="3">Actions</th>
                </thread>
                <% pastEvents.forEach( (event) => { %>
                  <tr>      
                    <td><%= event.title %></b></td> 
                    <td><%= event.date.toLocaleDateString(undefined, {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', timeZone: 'UTC'}) %></b></td> 
                    <td><%= event.endTime%></b></td> 
                    <td><a href="/viewinfo?title=<%= event.title %>" class="btn btn-custom my-2">View</a></td> 
                  </tr>                      
                <% }) %>
              </table>
              </p>
            <% } else { %>
              <p>There are no Event objects in the database.</p>
            <% } %>
            <p>
            <p>
              <a href="/all" class="btn btn-custom my-2">View all events</a>
            </p>
            <p>
              <a href="/" class="btn btn-custom my-2"> Back to Home</a>
            </p>
        </div>

        <div class="col-lg-4"><!-- this is just here to center the previous column --></div>
      </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>