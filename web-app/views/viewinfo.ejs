<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View Person</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <style>
      .btn-custom{
        background-color: #B53135;
        color: white;
      }
      .btn-custom:hover{
        background-color: #6E1E21;
        color: white;
      }
      body{
        background-color: #FFEEBE;
      }
    </style>

  </head>
  <body>

    <div class="container">
        <div class="row h-100">
          <div class="col-lg-4"><!-- this is just here to center the next column --></div>

          <div class="col-lg-4 text-center my-auto">
            <% if (event) { %>
                <tr>
                  <p>
                    Title: <b><%= event.title%></b>
                  </p>
                  </p>
                  Date: <b><%= event.date.toLocaleDateString(undefined, {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', timeZone: 'UTC'})%></b>
                  <p>
                  <p>
                  Time: <b><%= event.startTime + " - " + event.endTime%></b>
                  <p>
                  <p>
                    Host: <b><%= event.host %></b>
                  </p>
                  <p>
                    Category: <b><%= event.category %></b>
                  </p>
                  <p>
                    Location: <b><%= event.location %></b>
                  </p>
                  <p>
                    To Bring: <b><%= event.toBring %></b>
                  </p>
                  <p>
                    Additional Description: <b><%= event.additionalDescription %></b>
                  </p>
                  <p>
                    Accessibility Info: <b><%= event.accessibilityInfo %></b>
                  </p>
                </tr>   
            <% } else { %>

              <p>An error occurred: there is no Event named "<%= requestedtitle %>"</p>

            <% } %>

              <p>
                <a href="/pastevent" class="btn btn-custom my-2">View past events</a>                    
              </p>
              <p>
                <a href="/all" class="btn btn-custom my-2">View all events</a>  
              </p>
              <p>
                <a href="/" class="btn btn-custom my-2">Back to Home</a>
              </p>
          </div>

          <div class="col-lg-4"><!-- this is just here to center the previous column --></div>

        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>


