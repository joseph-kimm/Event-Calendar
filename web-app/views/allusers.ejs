<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>View All Users</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  
  <style>
    .btn-custom{
      background-color:#B53135;
      color: white;
    }
    .btn-custom:hover{
      background-color: #6E1E21;
      color: white;
    }
    body{
      background-color: #FFEEBE;
    }
  </style>
  
  <script type="text/javascript">
    function confirmDelete(username) {
      var answer = confirm("Are sure you want to delete " + username + "?")
      if (answer){
        window.location = "/deleteUser?username=" + username;
      }
    }
    </script>
</head>
<body>

  <div class="container">
    <div class="row h-100">
      <div class="col-lg-4"><!-- this is just here to center the next column --></div>
      <div class="col-lg-4 text-center my-auto">
          <% if (users && users.length > 0) { %>
            <p>
            Here are all the users in the database:
            </p>
            <p>
            <table class="table table-bordered">
              <% users.forEach( (user) => { %>
                <tr>      
                  <td>User Name: <b><%= user.username %></b></td> 
                  <td><a href="/viewUser?username=<%= user.username %>" class="btn btn-custom my-2">View</a></td> 
                  <td><a href="javascript:confirmDelete('<%= user.username %>')" class="btn btn-custom my-2">Delete</a></td>
                </tr>                      
              <% }) %>
            </table>
            </p>
          <% } else { %>
            <p>There are no user objects in the database.</p>
          <% } %>

        <p>
          <a href="/" class="btn btn-custom my-2">Back to Home</a>
        </p>
      </div>

      <div class="col-lg-4"><!-- this is just here to center the previous column --></div>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
