<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  
    <style>
      .btn-custom{
        background-color: #B53135;
        color: white;
      }
      .btn-custom:hover{
        background-color: #6E1E21;
        color: white;
      }
      body{
        background-color: #FFEEBE;
      }
    </style>

  </head>
  <body>

    <div class="container">
        <div class="row h-100">
          <div class="col-lg-4"><!-- this is just here to center the next column --></div>

          <div class="col-lg-4 text-center my-auto">
            <% if (u) { %>
              <tr> 
                <p>
                  username: <b><%= u.username %></b>
                </p>
                <p>
                  firstName: <b><%= u.firstName %></b>
                </p>
                <p>
                  lastName: <b><%= u.lastName %></b>
                </p>
                <p>
                  orgEmail: <b><%= u.orgEmail %></b>
                </p>
              </tr> 
            <% } else { %>

              <p>An error occurred: there is no person named "<%= requestedName %>"</p>

            <% } %>

              <p>
                <a href="/allUsers" class="btn btn-custom my-2">See all users</a>                    
              </p>
              <p>
                <a href="/" class="btn btn-custom my-2">Back to Home</a>
              </p>
              <!-- <p>
                <a href="/public/personform.html">Create a new person</a>                    
              </p> -->
          </div>

          <div class="col-lg-4"><!-- this is just here to center the previous column --></div>

        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>


